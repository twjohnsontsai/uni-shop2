/* 水平间距 */
.cart-container {
  padding-bottom: 50px;
}
.cart-title {
  height: 40px;
  display: flex;
  align-items: center;
  font-size: 14px;
  padding-left: 5px;
  border-bottom: 1px solid #efefef;
}
.cart-title .cart-title-text {
  margin-left: 10px;
}
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150px;
}
.empty-cart .empty-img {
  height: 90px;
  width: 90px;
}
.empty-cart .tip-text {
  font-size: 12px;
  color: gray;
  margin-top: 15px;
}

